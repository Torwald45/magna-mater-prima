{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "base",
					"color": "#ffffff",
					"name": "Base"
				},
				{
					"slug": "secondary",
					"color": "#000000",
					"name": "Secondary"
				},
				{
					"slug": "contrast",
					"color": "#555555",
					"name": "Contrast"
				},
				{
					"slug": "primary",
					"color": "#a11729",
					"name": "Primary"
				},
				{
					"slug": "light",
					"color": "#f4f4f4",
					"name": "Light"
				}
			],
			"custom": true,
			"customGradient": true,
			"link": true
		},
		"typography": {
			"fluid": true,
			"fontFamilies": [
				{
					"name": "Oswald",
					"slug": "oswald",
					"fontFamily": "Oswald, sans-serif",
					"fontFace": [
						{
							"fontFamily": "Oswald",
							"fontWeight": "500",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/oswald-v56-latin-ext-500.woff2" ]
						}
					]
				},
				{
					"name": "Roboto",
					"slug": "roboto",
					"fontFamily": "Roboto, sans-serif",
					"fontFace": [
						{
							"fontFamily": "Roboto",
							"fontWeight": "400",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/roboto-v47-latin-ext-400.woff2" ]
						},
						{
							"fontFamily": "Roboto",
							"fontWeight": "500",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/roboto-v47-latin-ext-500.woff2" ]
						},
						{
							"fontFamily": "Roboto",
							"fontWeight": "600",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/roboto-v47-latin-ext-600.woff2" ]
						}
					]
				}
			],
			"fontSizes": [
				{
					"slug": "extra-small",
					"size": "0.875rem",
					"name": "Extra small",
					"fluid": false
				},
				{
					"slug": "small",
					"size": "1rem",
					"name": "Small",
					"fluid": false
				},
				{
					"slug": "medium",
					"size": "clamp(1rem, 2vw, 1.125rem)",
					"name": "Medium",
					"fluid": true
				},
				{
					"slug": "large",
					"size": "clamp(1.375rem, 3vw, 1.625rem)",
					"name": "Large",
					"fluid": true
				},
				{
					"slug": "x-large",
					"size": "clamp(1.625rem, 4vw, 2rem)",
					"name": "X-Large",
					"fluid": true
				},
				{
					"slug": "xx-large",
					"size": "clamp(2rem, 5vw, 2.5rem)",
					"name": "XX-Large",
					"fluid": true
				}
			],
			"lineHeight": true,
			"fontWeight": true,
			"fontStyle": true
		},
		"layout": {
			"contentSize": "1180px",
			"wideSize": "1180px"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vh", "vw", "%" ],
			"padding": true,
			"margin": true,
			"blockGap": true,
			"spacingSizes": [
				{
					"size": "0.5rem",
					"slug": "20",
					"name": "XS"
				},
				{
					"size": "1rem",
					"slug": "30",
					"name": "S"
				},
				{
					"size": "1.5rem",
					"slug": "40",
					"name": "M"
				},
				{
					"size": "2rem",
					"slug": "50",
					"name": "L"
				},
				{
					"size": "3rem",
					"slug": "60",
					"name": "XL"
				}
			]
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--medium)",
			"fontFamily": "var(--wp--preset--font-family--roboto)",
			"fontWeight": "400",
			"letterSpacing": "0.5px",
			"lineHeight": "1.6"
		},
		"spacing": {
			"blockGap": "0"
		},
		"css": ".grid-layout { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; } .grid-item { background: var(--wp--preset--color--light); padding: var(--wp--preset--spacing--40); border-radius: 8px; transition: transform 0.2s ease; } .grid-item:hover { transform: translateY(-4px); } @media (max-width: 768px) { .grid-layout { grid-template-columns: 1fr; gap: 1rem; } } .wp-block-social-links .wp-social-link { border-radius: 0 !important; }",
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					}
				}
			},
			"button": {
				"border": {
					"color": "var(--wp--preset--color--transparent)",
					"width": "4px",
					"style": "solid",
					"radius": "4px"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--contrast)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "700"
				},
				"shadow": "var(--wp--preset--shadow--natural)",
				":hover": {
					"border": {
						"color": "var(--wp--preset--color--secondary)"
					}
				}
			}
		},
		"blocks": {
			"core/comment-author-name": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-edit-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-reply-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/details": {
				"color": {
					"text": "var(--wp--preset--color--base)",
					"background": "var(--wp--preset--color--secondary)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--30)",
						"right": "var(--wp--preset--spacing--30)",
						"bottom": "var(--wp--preset--spacing--30)",
						"left": "var(--wp--preset--spacing--30)"
					}
				}
			},
			"core/footnotes": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-small)"
				},
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--secondary)"
						}
					}
				}
			},
			"core/latest-comments": {
				"spacing": {
					"padding": {
						"left": "0px"
					}
				}
			},
			"core/navigation": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/page-list": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/separator": {
				"color": {
					"background": "var(--wp--preset--color--secondary)"
				}
			},
			"core/post-author-name": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-small)"
				},
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--secondary)"
						}
					}
				}
			},
			"core/post-content": {
				"spacing": {
					"padding": {
						"top": "0",
						"bottom": "0"
					}
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-small)"
				},
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--secondary)"
						}
					}
				}
			},
			"core/post-navigation-link": {
				"typography": {
					"fontWeight": "700"
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-small)"
				},
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--secondary)"
						}
					}
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"core/query-pagination": {
				"typography": {
					"fontWeight": "700"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--60)",
						"bottom": "var(--wp--preset--spacing--60)"
					}
				}
			},
			"core/query-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"core/search": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"woocommerce/product-categories": {
				"css": "& ul{list-style:none;} & ul:first-child{padding-left:0;}"
			},
			"woocommerce/product-price": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				},
				"elements": {
					"link":{
						"color": {
							"text": "var(--wp--preset--color--contrast)"
						}
					}
				}
			},
			"woocommerce/filter-wrapper": {
				"elements": {
					"heading": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--medium)",
							"fontWeight": "400"
						}
					}
				}
			},
			"yoast/faq-block": {
				"css" : "& .schema-faq-section { background: var(--wp--preset--color--secondary); color: var(--wp--preset--color--base); padding: 8px 4px 8px 32px; margin: 4px 0;} & .schema-faq-answer{line-height: inherit; margin: 0;}"
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "narrow-header",
			"title": "Narrow header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		},
		{
			"name": "narrow-footer",
			"title": "Narrow footer",
			"area": "footer"
		},
		{
			"name": "sidebar",
			"title": "Sidebar",
			"area": "uncategorized"
		},
		{
			"name": "post-navigation",
			"title": "Post navigation",
			"area": "uncategorized"
		},
		{
			"name": "comments",
			"title": "Comments",
			"area": "uncategorized"
		}
	],
	"customTemplates": [
		{
			"name": "no-title",
			"title": "No title",
			"postTypes": [ "post","page" ]
		},
		{
			"name": "featured-image",
			"title": "Featured image in header",
			"postTypes": [ "post","page" ]
		},
		{
			"name": "sidebar-page-template",
			"title": "Page with sidebar",
			"postTypes": [ "page" ]
		},
		{
			"name": "sidebar-post-template",
			"title": "Post with sidebar",
			"postTypes": [ "post" ]
		},
		{
			"name": "single-product",
			"title": "Single product"
		},
		{
			"name": "archive-product",
			"title": "Shop (Product archive)"
		}
	]
}
